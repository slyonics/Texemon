<?xml version="1.0" encoding="utf-8"?>
<View>

	<Panel Name="EnemyPanel" Style="Bind PlayerProfile.FrameStyle" Anchor="$CenterX,$CenterY" Bounds="Bind EnemyWindow" InnerMargin="3,3,3,3" TransitionIn="Expand">
		<DataGrid Items="Bind Enemies" Alignment="Stretch">
			<BattleEnemy Style="Blank" PushedStyle="Bind PlayerProfile.FrameSelectedStyle" Alignment="Horizontal" Bounds="Ref DataGrid.EnemySize">
				<Image Sprite="Ref DataGrid.AnimatedSprite" Alignment="Bottom" Depth="0.5"/>
			</BattleEnemy>
		</DataGrid>
		<Image Picture="Bind BackgroundRender" Alignment="Stretch" Depth="1.0"/>
	</Panel>

	<Panel Name="PlayerPanel" Style="Bind PlayerProfile.WindowStyle" Anchor="$CenterX,$CenterY" Bounds="Bind PlayerWindow" InnerMargin="8,16,8,8" TransitionIn="Expand">
		<DataGrid Items="Bind Players" Alignment="Stretch">
			<Panel Alignment="Vertical" Bounds="0,0,80,20">
				<BattlePlayer Sprite="Ref DataGrid.AnimatedSprite" Alignment="BottomLeft"/>
				<Label Text="Bind DataGrid.Stats.Name" Font="Bind PlayerProfile.Font" Alignment="Left" TextAlignment="Left"/>
			</Panel>
		</DataGrid>
	</Panel>

	<Panel Name="BattlePanel" Style="Bind PlayerProfile.WindowStyle" Anchor="$CenterX,$CenterY" Bounds="-20,30,170,80" InnerMargin="8,4,8,8" TransitionIn="Expand">
		<CrawlText Font="Bind PlayerProfile.Font" Text="Bind BattleNarration" Name="Narration" Alignment="Stretch"/>
	</Panel>
	
</View>