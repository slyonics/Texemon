<?xml version="1.0" encoding="utf-8"?>
<View>

	<Panel Name="EnemyPanel" Style="Bind PlayerProfile.FrameStyle" Anchor="$CenterX,$CenterY" Bounds="Bind EnemyWindow" InnerMargin="3,3,3,3" TransitionIn="Expand">
		<Image RenderBinding="BackgroundRender" Alignment="Stretch" Depth="1.0"/>
		<DataGrid Items="Bind Enemies" Alignment="Stretch">
			<Button Style="Bind PlayerProfile.FrameStyle" Alignment="Horizontal" Bounds="Ref DataGrid.EnemySize">
				<Image Sprite="Ref DataGrid.AnimatedSprite" Alignment="Bottom"/>
			</Button>
		</DataGrid>
	</Panel>

	<Panel Style="Bind PlayerProfile.WindowStyle" Anchor="$CenterX,$CenterY" Bounds="Bind PlayerWindow" InnerMargin="16,16,16,16" TransitionIn="Expand">
		<DataGrid Items="Bind Players" Alignment="Stretch">
			<Panel Alignment="Vertical" Bounds="0,0,70,20">
				<Image Sprite="Ref DataGrid.AnimatedSprite" Alignment="BottomLeft"/>
				<Label Text="Ref DataGrid.Name" Font="Bind PlayerProfile.Font" Alignment="Left" TextAlignment="Left"/>
			</Panel>
		</DataGrid>
	</Panel>
	
</View>