<?xml version="1.0" encoding="utf-8"?>
<View>

	<Panel Name="EnemyPanel" Style="Bind PlayerProfile.FrameStyle" Anchor="$CenterX,$CenterY" Bounds="Bind EnemyWindow" InnerMargin="3,3,3,3" TransitionIn="Expand">
		<DataGrid Items="Ref InitialEnemies" Alignment="Stretch">
			<Scenes.BattleScene.BattleEnemy EnemyRecord="Ref DataGrid" Alignment="Horizontal"/>
		</DataGrid>
		<Image Picture="Bind BackgroundRender" Alignment="Stretch" Depth="1.0"/>
	</Panel>

	<Panel Name="PlayerPanel" Style="Bind PlayerProfile.WindowStyle" Anchor="$CenterX,$CenterY" Bounds="Bind PlayerWindow" InnerMargin="8,16,8,8" TransitionIn="Expand">
		<DataGrid Items="Bind PlayerProfile.Party" Alignment="Stretch">
			<Panel Alignment="Vertical" Bounds="0,0,102,20">
				<Scenes.BattleScene.BattlePlayer HeroProfile="Bind DataGrid" Alignment="BottomLeft"/>
				<Label Text="Bind DataGrid.Name" Font="Bind PlayerProfile.Font" Alignment="Cascading" TextAlignment="Left" Bounds="10,0,0,20"/>
				<Label Text="Bind DataGrid.Health" Font="Dialogue" Alignment="Left" TextAlignment="Right" Bounds="90,-3,0,20"/>
				<Label Text="/" Font="Dialogue" Alignment="Left" TextAlignment="Left" Bounds="0,0,5,20"/>
				<Label Text="Bind DataGrid.MaxHealth" Font="Dialogue" Alignment="Left" TextAlignment="Left" Bounds="-1,3,0,20"/>
			</Panel>
		</DataGrid>
	</Panel>

	<Panel Name="BattlePanel" Style="Bind PlayerProfile.WindowStyle" Anchor="$CenterX,$CenterY" Bounds="-20,30,170,80" InnerMargin="8,4,8,8" TransitionIn="Expand">
		<Panel Bounds="0,0,170,20" Visible="Bind PlayerTurn">
			<Button Radio="True" Style="Bind PlayerProfile.WindowStyle" PushedStyle="Bind PlayerProfile.SelectedStyle" Bounds="-8,-4,62,20" Alignment="Left" InnerMargin="8,8,8,8">
				<Label Text="Equipment" Bounds="2,-8,40,20"/>
			</Button>
			<Button Radio="True" Style="Bind PlayerProfile.WindowStyle" PushedStyle="Bind PlayerProfile.SelectedStyle" Bounds="-8,-4,62,20" Alignment="Left" InnerMargin="8,8,8,8">
				<Label Text="Abilities" Bounds="10,-8,29,20"/>
			</Button>
			<Button Radio="True" Style="Bind PlayerProfile.WindowStyle" PushedStyle="Bind PlayerProfile.SelectedStyle" Bounds="-8,-4,62,20" Alignment="Left" InnerMargin="8,8,8,8">
				<Label Text="Actions" Bounds="10,-8,26,20"/>
			</Button>
		</Panel>
		<Panel Style="Bind PlayerProfile.WindowStyle" Bounds="-8,8,80,68" InnerMargin="8,9,8,8" Visible="Bind PlayerTurn">
			<DataGrid Items="Ref ActivePlayer.Equipment">
				<Button Radio="True" Style="Bind PlayerProfile.LabelStyle">
					<Label Text="Mycommand"/>
				</Button>
			</DataGrid>
		</Panel>
	</Panel>
	
</View>