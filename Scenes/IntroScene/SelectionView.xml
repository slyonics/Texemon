<?xml version="1.0" encoding="utf-8"?>
<View>

	<Panel Anchor="$CenterX,$CenterY" Bounds="-60,-80,120,100">
		<Button Style="Panel" PushedStyle="SelectedPanel" Bounds="0,0,120,20" Alignment="Cascading" Action="Magic" Radio="True" InnerMargin="8,8,8,8">
			<Label Text="Magic" Alignment="Center" Color="#F0D0B0FF" Font="Dialogue"/>
		</Button>
		<Label Text="OR" Alignment="Cascading" Color="#F0D0B0FF" Bounds="0,0,120,20" Font="Dialogue"/>
		<Button Style="Panel" PushedStyle="SelectedPanel" Bounds="0,0,120,20" Alignment="Cascading" Action="Technology" Radio="True" InnerMargin="8,8,8,8">
			<Label Text="Technology" Alignment="Center" Color="#F0D0B0FF" Font="Dialogue"/>
		</Button>
	</Panel>

	<Panel Anchor="$CenterX,$CenterY" Bounds="-60,20,120,100">
		<CrawlText Name="Description">
		
		</CrawlText>
		<Button Style="Panel" PushedStyle="SelectedPanel" Bounds="0,0,120,20" Alignment="Cascading" Action="Proceed" InnerMargin="8,8,8,8" Visible="Bind ReadyToProceed">
			<Label Text="Proceed" Alignment="Center" Color="#F0D0B0FF" Font="Dialogue"/>
		</Button>
	</Panel>

	<Panel Style="ClearPanel" Bounds="0,0,$ScreenWidth,$ScreenHeight"/>
	
</View>