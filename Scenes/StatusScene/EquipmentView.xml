<?xml version="1.0" encoding="utf-8"?>
<View>
	<Panel Style="Bind PlayerProfile.WindowStyle" Anchor="$CenterX,$CenterY" Bounds="-141,-80,92,71" InnerMargin="2,2,2,6">
		<DataGrid Name="PartyList" Items="Bind PartyMembers" Scrolling="False" Bounds="0,0,88,63" Alignment="Cascading" InnerMargin="2,1,0,2">
			<Button Radio="True" Style="Blank" PushedStyle="LabelGlow" Alignment="Vertical" Bounds="0,0,84,16" Action="SelectParty" ActionParameter="Ref DataGrid.HeroModel">
				<Image Sprite="Bind DataGrid.PlayerSprite" Alignment="Left" Bounds="9,23,30,16"/>
				<Label Text="Bind DataGrid.HeroModel.Name" Font="Bind PlayerProfile.Font" Alignment="Left" TextAlignment="Left" Bounds="-15,11,54,16"/>
			</Button>
		</DataGrid>
	</Panel>

	<Panel Style="Bind PlayerProfile.WindowStyle" Anchor="$CenterX,$CenterY" Bounds="-49,-80,90,69" Visible="Bind ShowEquipment">
		<DataGrid Name="EquipmentList" Items="Bind EquipmentList" Scrolling="False" Alignment="Stretch" InnerMargin="2,4,2,5">
			<Button Radio="True" Style="Blank" PushedStyle="LabelGlow" Bounds="0,0,82,10" Alignment="Vertical" InnerMargin="2,0,2,0" Action="SelectItem" ActionParameter="Ref DataGrid">
				<Image Icon="Ref DataGrid.Icon" Alignment="Left" Bounds="1,1,8,8"/>
				<Label Text="Ref DataGrid.Name" Alignment="Left" TextAlignment="Left" Bounds="2,11,53,8"/>
				<Label Visible="Ref DataGrid.ShowCharges" Text="Ref DataGrid.ChargesLeft" Alignment="Left" TextAlignment="Right" Bounds="0,11,14,8"/>
			</Button>
		</DataGrid>
	</Panel>

	<Panel Style="Bind PlayerProfile.WindowStyle" Anchor="$CenterX,$CenterY" Bounds="41,-80,100,68" Visible="Bind ShowDescription">
		<Panel Bounds="0,-4,100,68" InnerMargin="0,11,0,5">
			<Label Text="Bind Description1" Bounds="0,0,0,10" Alignment="Vertical" TextAlignment="Center"/>
			<Label Text="Bind Description2" Bounds="0,0,0,10" Alignment="Vertical" TextAlignment="Center"/>
			<Label Text="Bind Description3" Bounds="0,0,0,10" Alignment="Vertical" TextAlignment="Center"/>
			<Label Text="Bind Description4" Bounds="0,0,0,10" Alignment="Vertical" TextAlignment="Center"/>
			<Label Text="Bind Description5" Bounds="0,0,0,10" Alignment="Vertical" TextAlignment="Center"/>
		</Panel>
	</Panel>
</View>