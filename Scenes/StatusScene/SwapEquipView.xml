		</DataGrid>
	</Panel>

	<Panel Style="Bind PlayerProfile.WindowStyle" Anchor="$CenterX,$CenterY" Bounds="-49,-80,90,160">
		<DataGrid Name="ItemList" Items="Bind AvailableItems" Bounds="0,4,90,160" Alignment="Cascading" InnerMargin="4,0,4,0">
			<Button Radio="True" Style="Blank" PushedStyle="LabelGlow" Bounds="0,0,82,10" Alignment="Vertical" Action="SelectItem" ActionParameter="Ref DataGrid">
