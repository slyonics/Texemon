			<Button Radio="True" Style="Blank" PushedStyle="LabelGlow" Bounds="0,0,84,10" Alignment="Vertical" InnerMargin="2,0,2,0">
				<Image Icon="Ref DataGrid.Icon" Alignment="Left" Bounds="1,1,8,8"/>
