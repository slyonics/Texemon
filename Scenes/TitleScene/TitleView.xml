<?xml version="1.0" encoding="utf-8"?>
<View>
	
	<Panel Anchor="$CenterX,$CenterY" Bounds="-90,-100,180,20">		  
		<Button Style="TechWindow" PushedStyle="TechSelected" Bounds="0,0,60,20" Alignment="Cascading" Action="SettingsMenu" InnerMargin="8,1,8,4">
			<Label Text="Settings" Alignment="Center" Color="#E0BFA2FF" Font="Pixel"/>
		</Button>
		<Button Style="TechWindow" PushedStyle="TechSelected" Bounds="0,0,60,20" Alignment="Cascading" Action="Credits" InnerMargin="8,1,8,4">
			<Label Text="Credits" Alignment="Center" Color="#E0BFA2FF" Font="Pixel"/>
		</Button>
		<Button Style="TechWindow" PushedStyle="TechSelected" Bounds="0,0,60,20" Alignment="Cascading" Action="Exit" InnerMargin="8,1,8,4">
			<Label Text="Exit" Alignment="Center" Color="#E0BFA2FF" Font="Pixel"/>
		</Button>
	</Panel>
	<Panel Anchor="$CenterX,$CenterY" Bounds="-60,-80,120,120">
		<DataGrid Items="Bind AvailableSaves" Alignment="Stretch">
			<Button Style="Bind DataGrid.WindowStyle" PushedStyle="Bind DataGrid.WindowSelectedStyle" Alignment="Center" Bounds="0,0,120,30" Action="Continue" ActionParameter="Ref DataGrid.SaveSlot">
				<Image Sprite="Bind DataGrid.AnimatedSprite" Alignment="Left" Bounds="10,32,28,20"/>
				<Label Text="Bind DataGrid.PartyLeader.Name" Font="Pixel" Alignment="Cascading" TextAlignment="Left" Bounds="22,12,80,20"/>
				<Label Text="Bind DataGrid.PlayerLocation" Font="Dialogue" Alignment="Cascading" TextAlignment="Left" Bounds="22,13,110,10"/>
			</Button>
		</DataGrid>
	</Panel>
	<Button Style="TechWindow" PushedStyle="TechSelected" Anchor="$CenterX,$CenterY" Bounds="-35,40,70,20" Action="NewGame" InnerMargin="8,1,8,4">
		<Label Text="New Game" Alignment="Center" Color="#E0BFA2FF" Font="Pixel"/>
	</Button>
  
</View>