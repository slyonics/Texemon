		  </Button>
		  <Button Style="Bind PlayerProfile.WindowStyle" PushedStyle="Bind PlayerProfile.SelectedStyle" Bounds="0,0,120,20" Alignment="Cascading" Tooltip ="About the creators" Action="Credits" InnerMargin="8,8,8,8">
			  <Label Text="Credits" Alignment="Center" Color="#E0BFA2FF" Font="Dialogue"/>
		  </Button>
		  <Button Style="Bind PlayerProfile.WindowStyle" PushedStyle="Bind PlayerProfile.SelectedStyle" Bounds="0,0,120,20" Alignment="Cascading" Tooltip ="Exit to desktop" Action="Exit" InnerMargin="8,8,8,8">
