<?xml version="1.0" encoding="utf-8"?>
<View>



  <Panel Anchor="$CenterX,$CenterY" Bounds="-160,-40,320,405">
	<Button Style="GamePanelOpaque" PushedStyle="GamePanelSelected" Bounds="0, 0, 320, 52" Alignment="Cascading" Tooltip ="Begin a new game" Action="NewGame" InnerMargin="0,8,0,0">
		<Label Text="New Game" Alignment="Center" Color="#E0BFA2FF" Font="PersonifiedUXRegular"/>
	</Button>
	<Button Name="LoadButton" PushedStyle="GamePanelSelected" Style="GamePanelOpaque" Bounds="0, 0, 320, 52" Alignment="Cascading" Tooltip ="Resume previous game" Action="Continue" EnableBinding="SaveAvailable" InnerMargin="0,8,0,0">
		<Label Text="Continue" Alignment="Center" Color="#E0BFA2FF" Font="PersonifiedUXRegular"/>
	</Button>
    <Button Style="GamePanelOpaque" PushedStyle="GamePanelSelected" Bounds="0, 0, 320, 52" Alignment="Cascading" Tooltip ="Audio and video settings" Action="SettingsMenu" InnerMargin="0,8,0,0">
      <Label Text="Settings" Alignment="Center" Color="#E0BFA2FF" Font="PersonifiedUXRegular"/>
    </Button>
    <Button Style="GamePanelOpaque" PushedStyle="GamePanelSelected" Bounds="0, 0, 320, 52" Alignment="Cascading" Tooltip ="About the creators" Action="Credits" InnerMargin="0,8,0,0">
      <Label Text="Credits" Alignment="Center" Color="#E0BFA2FF" Font="PersonifiedUXRegular"/>
    </Button>
    <Button Style="GamePanelOpaque" PushedStyle="GamePanelSelected" Bounds="0, 0, 320, 52" Alignment="Cascading" Tooltip ="Exit to desktop" Action="Exit" InnerMargin="0,8,0,0">
      <Label Text="Exit" Alignment="Center" Color="#E0BFA2FF" Font="PersonifiedUXRegular"/>
    </Button>
  </Panel>
  
</View>