	  <Image SpriteBinding="MapActor" Alignment="Bottom" Bounds="0,0,128,128" SpriteScale="$Scale"/>
	  <Gauge Minimum="0" MaximumBinding="MaxHealthBar" Frame="ui_healthBar" Background="ui_healthBarBackground" Alignment="Center" VisibleBinding="ShowHealthBar" Bounds="0,-40,420,45" InnerMargin="8,8,8,8">
		  <GaugeBar Bar="ui_healthBarInside" Binding="CurrentHealthBar">
		  </GaugeBar>
	  </Gauge>
  </Panel>

	<Panel Name="MiniMapPanel" Anchor="$CenterX,$CenterY" Bounds="-360,-142,220,300,$Scale" Style="GamePanel" InnerMargin="6,6,6,6" TransitionIn="Expand">
		<Image Name="MiniMap" RenderBinding="MiniMapRender" Alignment="Stretch"/>
		<Label Binding="MapName" Alignment="Vertical" FontBinding="ConversationFont" Color="#E0BFA2FF" Bounds="0,5,3000,30,$Scale"/>
	</Panel>

	<Panel Name="DialoguePanel" Anchor="$CenterX,$CenterY" Bounds="-98,104,472,140,$Scale" Style="GamePanelOpaque" InnerMargin="16,18,16,18" TransitionIn="Expand">

	</Panel>
  
</View>