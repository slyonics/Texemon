<?xml version="1.0" encoding="utf-8"?>
<View>

  <Panel Name="MapPanel" Anchor="$CenterX,$CenterY" Bounds="-98,-242,472,292,$Scale" Style="GamePanel" InnerMargin="6,6,6,6" TransitionIn="Expand">
